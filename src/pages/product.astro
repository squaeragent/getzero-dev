  </section>

  <style>
    .product-cta-block {
      border: 1px solid var(--amber);
      padding: 20px 16px;
      margin: 0;
      text-align: center;
      background: rgba(255, 176, 0, 0.03);
      border-top: none;
      border-bottom: 1px solid #1a1a1a;
    }

    .cta-price-row {
      display: flex;
      align-items: baseline;
      justify-content: center;
      gap: 12px;
      margin-bottom: 8px;
    }

    .cta-price {
      font-family: var(--font-head);
      font-weight: 700;
      font-size: 2rem;
      color: var(--amber);
      text-shadow: 0 0 12px var(--amber-glow);
      line-height: 1;
    }

    .cta-period {
      font-size: 1rem;
      color: var(--text-dim);
      text-shadow: none;
    }

    .cta-label {
      font-family: var(--font-head);
      font-weight: 700;
      font-size: 0.7rem;
      letter-spacing: 0.15em;
      color: var(--text-dim);
    }

    .cta-subtext {
      font-size: 0.8rem;
      color: var(--text-dim);
      margin-bottom: 16px;
    }

    .cta-button {
      display: inline-block;
      font-family: var(--font-head);
      font-weight: 700;
      font-size: 0.9rem;
      letter-spacing: 0.1em;
      color: var(--void);
      background: var(--amber);
      padding: 10px 32px;
      text-decoration: none;
      text-shadow: none;
      transition: background 0.2s ease;
    }

    .cta-button:hover {
      background: var(--phosphor);
      text-shadow: none;
    }

    .cta-proof {
      margin-top: 14px;
      font-size: 0.75rem;
      color: var(--text-dim);
    }

    @media (max-width: 640px) {
      .cta-price { font-size: 1.6rem; }
      .product-cta-block { padding: 16px 12px; }
      .cta-button { padding: 8px 24px; font-size: 0.8rem; }
    }
  </style>
</BaseLayout>
