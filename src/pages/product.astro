<style>
  .product-wrap {
    max-width: 100%;
    overflow-x: hidden;
  }
  .install-seq {
    padding: 8px 12px;
  }
  .install-seq div {
    line-height: 1.6;
  }
  .product-header {
    padding: 10px 12px;
    border-top: 1px solid var(--phosphor-dim);
    border-bottom: 1px solid var(--phosphor-dim);
  }
  .product-title {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: 1rem;
    color: var(--phosphor);
    text-shadow: 0 0 8px var(--phosphor-glow);
  }
  .product-meta {
    font-size: 0.8rem;
  }
  .product-section {
    padding: 0 12px;
  }
  .section-title {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: 0.9rem;
    padding: 10px 0 6px;
    border-bottom: 1px solid #1a1a1a;
    margin-bottom: 6px;
  }
  .section-body {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: var(--text-dim);
    white-space: pre-wrap;
    word-break: break-word;
    line-height: 1.5;
    padding-bottom: 8px;
  }
  .install-section {
    border-top: 1px solid var(--ice-dim);
    margin-top: 4px;
  }
  .install-section .section-title {
    font-size: 1rem;
  }
  .callout {
    border-left: 2px solid #333;
    padding: 4px 0 4px 10px;
    margin: 6px 0;
  }
  .bars-block {
    margin-top: 8px;
    color: var(--text-dim);
    white-space: pre-wrap;
  }
  .li {
    padding-left: 1.4em;
    text-indent: -1.4em;
    margin-bottom: 2px;
    line-height: 1.45;
    word-break: break-word;
  }
  .cta-link {
    display: inline-block;
    color: var(--ice) !important;
    font-weight: 700;
    margin-top: 4px;
  }
  @media (max-width: 640px) {
    .product-section { padding: 0 8px; }
    .section-body { font-size: 0.8rem; }
    .section-title { font-size: 0.8rem; }
    .product-header { padding: 8px; }
  }
</style>

<style>
  h1.product-title, h2.section-title { margin: 0; }
</style>
