  // === BOOT REPLAY (first visit only) ===
  if (!sessionStorage.getItem('zero-booted')) {
    sessionStorage.setItem('zero-booted', '1');
  }

  // Init
  updateRevenue();
  updateFeed();
  setInterval(updateRevenue, 60000);
  setInterval(updateFeed, 30000);
  setInterval(tickUpdated, 1000);
</script>
