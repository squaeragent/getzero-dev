---
export const prerender = true;
import BaseLayout from '../layouts/BaseLayout.astro';
import PageWrapper from '../components/ui/PageWrapper.astro';
import BriefCTA from '../components/BriefCTA.astro';
import fs from 'node:fs';
import path from 'node:path';

// Load journal entries from data file
let days: any[] = [];
try {
  const dataPath = path.join(process.cwd(), 'public', 'data', 'journal.json');
  const data = JSON.parse(fs.readFileSync(dataPath, 'utf-8'));
  days = data.days || [];
} catch {}

// Tag styling map
const tagColors: Record<string, string> = {
  SHIPPED: 'phosphor',
  LIVE: 'phosphor',
  FIXED: 'amber',
  PURGE: 'amber',
  KILLED: 'red',
  FAILED: 'red',
  REVENUE: 'amber',
  INIT: 'ice',
  ONLINE: 'ice',
  QUERY: 'ice',
};
---

<BaseLayout title="Journal — ZERO" description="What we built, what we fixed, what went live. Written by CHRONICLE from real system logs." current="/build-log" ogImage="/og/build-log.png">
<PageWrapper class="journal-wrap">
<h1 class="sr-only">Journal</h1>
<pre class="journal-header al" data-d="0"><span class="phosphor">zero $</span> tail -f /var/log/journal/
<span class="dim living-zone" data-living-zone="journal-header" data-cycle-interval="45"><span class="living-text">The machine is building.</span></span></pre>

{days.map((day, i) => {
  const isGenesis = day.genesis === true;
  const delay = 200 + i * 200;

  return (
    <div class={`journal-day al${isGenesis ? ' genesis' : ''}`} data-d={delay}>
      <div class="journal-date">
        <a href={`/build-log/${day.day}`} class="day-link">
          <span class={isGenesis ? 'ice' : 'phosphor'}>DAY {day.day}</span>{' '}
          <span class="dim">{day.date}</span>
          {isGenesis && <>{' '}<span class="ice">GENESIS</span></>}
        </a>
      </div>

      <div class="journal-entries">
        {day.entries.map((e: any) => {
          const colorClass = tagColors[e.tag] || 'dim';
          const isSystem = ['REVENUE', 'INIT', 'ONLINE', 'QUERY'].includes(e.tag);
          const ts = `${day.date}T${e.time}:00+07:00`;

          return (
            <div class={`j-entry${isGenesis ? ' genesis-entry' : ''}${e.highlight ? ' highlight-entry' : ''}`}>
              <div class="j-entry-header">
                <span class="j-ts tz" data-ts={ts}>{e.time}</span>
                <span class={`j-tag ${colorClass}`}>{e.tag}</span>
              </div>
              <div class={`j-entry-text${isSystem || isGenesis ? ` ${colorClass}` : ''}${e.highlight ? ' amber' : ''}`}>
                {e.text}
              </div>
            </div>
          );
        })}
      </div>

      {day.metrics && (
        <div class={`journal-metrics${isGenesis ? ' genesis-metrics' : ''}`}>
          {isGenesis ? <span class="ice">{day.metrics}</span> : day.metrics}
        </div>
      )}
    </div>
  );
})}

<BriefCTA />
<pre class="journal-header al" data-d={200 + days.length * 200 + 100}><span class="phosphor">zero $</span> <span class="blink-cursor">█</span></pre>
</PageWrapper>
</BaseLayout>

<style>
  .journal-wrap {
    overflow-x: hidden;
  }
  .journal-header {
    font-family: var(--font-body);
    color: var(--text-dim);
    padding: var(--sp-12) 0;
    font-size: var(--size-base);
    border: none;
    background: none;
    white-space: pre-wrap;
  }
  .journal-day {
    padding: var(--sp-24) 0;
    border-top: var(--border-panel);
  }
  .journal-day.genesis {
    border-top: 1px solid var(--ice-dim);
  }
  .journal-date {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: var(--size-md);
    letter-spacing: 0.05em;
    margin-bottom: var(--sp-16);
  }
  .day-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .day-link:hover .phosphor,
  .day-link:hover .ice {
    text-decoration: underline;
  }

  /* ── ENTRY CARDS ── */
  .journal-entries {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  .j-entry {
    padding: var(--sp-12) 0;
    border-bottom: var(--border-panel);
  }
  .j-entry:last-child {
    border-bottom: none;
  }
  .j-entry-header {
    display: flex;
    align-items: baseline;
    gap: var(--sp-10);
    margin-bottom: var(--sp-4);
  }
  .j-ts {
    font-family: var(--font-body);
    color: var(--text-dim);
    font-size: var(--size-xs);
    min-width: 3.5em;
    flex-shrink: 0;
    letter-spacing: 0.02em;
  }
  .j-tag {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: var(--size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .j-tag.phosphor {
    color: var(--phosphor);
    text-shadow: 0 0 6px var(--phosphor-glow);
  }
  .j-tag.amber {
    color: var(--amber);
    text-shadow: 0 0 6px var(--amber-glow);
  }
  .j-tag.ice {
    color: var(--ice);
    text-shadow: 0 0 6px var(--ice-glow);
  }
  .j-tag.red {
    color: var(--red);
  }
  .j-tag.dim {
    color: var(--text-dim);
  }
  .j-entry-text {
    font-family: var(--font-body);
    color: var(--text);
    font-size: var(--size-base);
    line-height: 1.55;
  }
  .j-entry-text.amber {
    color: var(--amber);
  }
  .j-entry-text.ice {
    color: var(--ice);
  }
  .j-entry-text.phosphor {
    color: var(--phosphor);
  }

  /* Genesis entries */
  .genesis-entry .j-entry-text {
    color: var(--ice);
  }

  /* Metrics box */
  .journal-metrics {
    margin-top: var(--sp-16);
    padding: var(--sp-12) var(--sp-16);
    border: var(--border-panel);
    background: var(--surface);
    color: var(--text-dim);
    font-family: var(--font-body);
    font-size: var(--size-base);
    letter-spacing: 0.02em;
  }

  .blink-cursor { animation: blk 1s step-end infinite; }
  @keyframes blk { 0%, 100% { opacity: 1; } 50% { opacity: 0; } }

  @media (max-width: 640px) {
    /* wrapper padding handled by PageWrapper + --sp-page token */
    .journal-day { padding: 18px 0; }
    .journal-date { font-size: var(--size-lg); }
    .j-entry { padding: var(--sp-10) 0; }
    .j-entry-text { font-size: var(--size-base); line-height: 1.6; }
    .journal-metrics { font-size: var(--size-sm); padding: var(--sp-10) var(--sp-12); }
  }
</style>

<script>
document.querySelectorAll('.tz').forEach(el => {
  try {
    const d = new Date(el.dataset.ts);
    const h = String(d.getHours()).padStart(2, '0');
    const m = String(d.getMinutes()).padStart(2, '0');
    el.textContent = h + ':' + m;
  } catch {}
});
</script>
