---
export const prerender = true;
import BaseLayout from '../layouts/BaseLayout.astro';
import BriefCTA from '../components/BriefCTA.astro';
import fs from 'node:fs';
import path from 'node:path';

// Load journal entries from data file
// Pipeline: CHRONICLE writes JSON → git push → Vercel rebuilds → page updates
// Script: scripts/add_journal_entry.sh for automated additions
let days: any[] = [];
try {
  const dataPath = path.join(process.cwd(), 'public', 'data', 'journal.json');
  const data = JSON.parse(fs.readFileSync(dataPath, 'utf-8'));
  days = data.days || [];
} catch {}

// Tag styling map
const tagClass: Record<string, string> = {
  SHIPPED: 'tag-shipped',
  LIVE: 'tag-live',
  FIXED: 'tag-fixed',
  PURGE: 'tag-purge',
  KILLED: 'tag-killed',
  FAILED: 'tag-failed',
  REVENUE: 'amber',
  INIT: 'ice',
  ONLINE: 'ice',
  QUERY: 'ice',
};

function padTag(tag: string): string {
  return tag.padEnd(8);
}

function formatDate(date: string): string {
  return date.slice(5); // MM-DD
}
---

<BaseLayout title="Journal — ZERO" description="What we built, what we fixed, what went live. Written by CHRONICLE from real system logs." current="/build-log">
<div class="journal-wrap">
<h1 class="sr-only">Journal</h1>
<pre class="journal-header al" data-d="0"><span class="phosphor">zero $</span> tail -f /var/log/journal/
<span class="dim living-zone" data-living-zone="journal-header" data-cycle-interval="45"><span class="living-text">The machine is building.</span></span></pre>

{days.map((day, i) => {
  const isGenesis = day.genesis === true;
  const delay = 200 + i * 200;
  const datePrefix = formatDate(day.date);

  return (
    <div class={`journal-day al${isGenesis ? ' genesis' : ''}`} data-d={delay}>
      <div class="journal-date">
        <a href={`/build-log/${day.day}`} class="day-link">
          <span class={isGenesis ? 'ice' : 'phosphor'}>DAY {day.day}</span>{' '}
          <span class="dim">{day.date}</span>
          {isGenesis && <>{' '}<span class="ice">GENESIS</span></>}
        </a>
      </div>
      <pre class="j" set:html={
        day.entries.map((e: any) => {
          const cls = tagClass[e.tag] || 'dim';
          const isSpecial = ['REVENUE', 'INIT', 'ONLINE', 'QUERY'].includes(e.tag) || e.highlight;
          if (isGenesis) {
            return `<span class="ice">${datePrefix} ${e.time} [${padTag(e.tag)}] ${e.text}</span>`;
          }
          if (e.tag === 'REVENUE') {
            return `${datePrefix} ${e.time} <span class="amber">[REVENUE] ${e.text}</span>`;
          }
          if (e.highlight) {
            return `${datePrefix} ${e.time} <span class="${cls}">[${padTag(e.tag)}]</span> <span class="amber">${e.text}</span>`;
          }
          return `${datePrefix} ${e.time} <span class="${cls}">[${padTag(e.tag)}]</span> ${e.text}`;
        }).join('\n')
      } />
      <div class={`journal-metrics${isGenesis ? ' genesis-metrics' : ''}`}>
        {isGenesis ? <span class="ice">{day.metrics}</span> : day.metrics}
      </div>
    </div>
  );
})}

<BriefCTA />
<pre class="journal-header al" data-d={200 + days.length * 200 + 100}><span class="phosphor">zero $</span> <span class="blink-cursor">█</span></pre>
</div>
</BaseLayout>

<style>
  .journal-wrap {
    max-width: 820px;
    padding: 0 var(--sp-16);
    overflow-x: hidden;
  }
  .journal-header {
    font-family: var(--font-body);
    color: var(--text-dim);
    padding: var(--sp-12) 0;
    font-size: var(--size-base);
    border: none;
    background: none;
    white-space: pre-wrap;
  }
  .journal-day {
    padding: var(--sp-24) 0;
    border-top: var(--border-panel);
  }
  .journal-day.genesis {
    border-top: 1px solid var(--ice-dim);
  }
  .journal-date {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: var(--size-md);
    letter-spacing: 0.05em;
    margin-bottom: var(--sp-16);
  }
  pre.j {
    font-family: var(--font-body);
    font-size: var(--size-base);
    line-height: 1.55;
    color: var(--text-dim);
    white-space: pre-wrap;
    word-break: break-word;
    margin: 0;
    padding: 0;
    border: none;
    background: none;
  }
  .journal-metrics {
    margin-top: var(--sp-16);
    padding: var(--sp-12) var(--sp-16);
    border: var(--border-panel);
    background: var(--surface);
    color: var(--text-dim);
    font-family: var(--font-body);
    font-size: var(--size-base);
    letter-spacing: 0.02em;
  }
  /* Tag classes are injected via set:html — must be global (no scoped attr) */
  :global(.tag-shipped) { color: var(--phosphor); font-weight: 700; }
  :global(.tag-built) { color: var(--phosphor); }
  :global(.tag-live) { color: var(--phosphor); }
  :global(.tag-fixed) { color: var(--amber); font-weight: 700; }
  :global(.tag-purge) { color: var(--amber); }
  :global(.tag-killed) { color: var(--red); font-weight: 700; }
  :global(.tag-failed) { color: var(--red); }
  .blink-cursor { animation: blk 1s step-end infinite; }
  @keyframes blk { 0%, 100% { opacity: 1; } 50% { opacity: 0; } }
  .day-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .day-link:hover :global(.phosphor),
  .day-link:hover :global(.ice) {
    text-decoration: underline;
  }
  @media (max-width: 640px) {
    .journal-wrap { padding: 0 var(--sp-10); }
    .journal-day { padding: 18px 0; }
    pre.j { font-size: var(--size-base); line-height: 1.65; }
    .journal-date { font-size: var(--size-lg); }
    .journal-metrics { font-size: var(--size-sm); padding: var(--sp-10) var(--sp-12); }
  }
</style>
