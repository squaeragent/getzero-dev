---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
import BriefCTA from '../../components/BriefCTA.astro';
import TermBlock from '../../components/ui/TermBlock.astro';
import KVRow from '../../components/ui/KVRow.astro';
import ManHeader from '../../components/ui/ManHeader.astro';
import CapList from '../../components/ui/CapList.astro';
import Pre from '../../components/ui/Pre.astro';
import { functions, social } from '../../data/metrics';
const agent = functions.squaer || {};
---

<BaseLayout title="SQUAER — Distribution Engine" description="SQUAER handles autonomous posting, reply strategy, and community engagement for ZERO OS." current="/agents" ogImage="/og/squaer.png">
  <div class="man-page">
    <h1 class="sr-only">SQUAER — Distribution Engine</h1>

    <Pre d={0}><span class="phosphor">zero $</span> man zero-agent-squaer</Pre>

    <TermBlock d={100}>
      <ManHeader left="SQUAER(1)" right="SQUAER(1)">ZERO OS Agent Manual</ManHeader>
    </TermBlock>

    <TermBlock d={200}>
      <div class="man-section">NAME</div>
      <div class="man-indent"><span class="phosphor">SQUAER</span> — Distribution Engine</div>
    </TermBlock>

    <TermBlock d={300}>
      <div class="man-section">SYNOPSIS</div>
      <div class="man-indent">Autonomous distribution. Posts, engages, grows — without asking.</div>
    </TermBlock>

    <TermBlock d={400}>
      <div class="man-section">DESCRIPTION</div>
      <div class="man-indent">SQUAER is the distribution engine — the only agent that directly interfaces with external platforms. It runs autonomously from the Mac Studio, operating with 7 autonomous authorities.</div>
      <div class="man-indent" style="margin-top: var(--sp-8)">Active on X as <a href="https://x.com/squaer_agent" target="_blank" rel="noopener"><span class="amber">@squaer_agent</span></a>. Not a scheduler that posts on a timer — an autonomous agent that decides what to publish, when to engage, and how to grow the audience.</div>
    </TermBlock>

    <TermBlock d={500}>
      <div class="man-section">AUTONOMOUS AUTHORITIES</div>
      <CapList items={[
        'Publishing — autonomous posting to X and other platforms',
        'Reply strategy — decides when and how to engage in conversations',
        'Community engagement — builds relationships, not just reach',
        'Timing intelligence — posts when the signal says to, not on a schedule',
        'Content distribution — routes content to the right platform and format',
        'Audience analysis — tracks what resonates, feeds signal back to system',
        'Platform operations — browser automation for platforms without API access',
      ]} />
    </TermBlock>

    <TermBlock d={600}>
      <div class="man-section">CAPABILITIES</div>
      <CapList items={[
        'Publishes content autonomously across social platforms',
        'Manages marketplace listings and product distribution',
        'Executes engagement strategy — replies, threads, community presence',
        'Collects social metrics and engagement data for system feedback',
        'Browser automation for direct platform interaction',
        'Newsletter distribution via Beehiiv',
      ]} />
    </TermBlock>

    <TermBlock d={700}>
      <div class="man-section">STATS</div>
      <KVRow k="followers" v={String(social.x_followers_squaer || 420)} color="phosphor" glow />
      <KVRow k="posts" v={String(social.x_tweets || 172)} color="phosphor" />
      <KVRow k="listed" v={String(social.x_listed || 4)} />
    </TermBlock>

    <TermBlock d={800}>
      <div class="man-section">SEE ALSO</div>
      <div class="man-indent"><a href="/agents">zero $ cd /agents</a></div>
    </TermBlock>

    <TermBlock d={900}>
      <ManHeader left="SQUAER(1)" right="SQUAER(1)">ZERO OS</ManHeader>
    </TermBlock>
  </div>
<BriefCTA />
</BaseLayout>

<style>
  .man-page {
    max-width: 820px;
    padding: 0 var(--sp-16);
  }
  .man-section {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: var(--size-sm);
    color: var(--text);
    letter-spacing: 0.05em;
    margin-bottom: var(--sp-4);
    padding-bottom: var(--sp-2);
    border-bottom: var(--border-panel);
  }
  .man-indent {
    padding-left: var(--sp-12);
    color: var(--text-dim);
    font-size: var(--size-base);
    line-height: 1.6;
    white-space: normal;
  }
  @media (max-width: 640px) {
    .man-page { padding: 0 var(--sp-10); }
    .man-indent { padding-left: var(--sp-8); }
    .man-section { font-size: var(--size-xs); }
  }
</style>
