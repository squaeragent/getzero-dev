---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageWrapper from '../../components/ui/PageWrapper.astro';
import BriefCTA from '../../components/BriefCTA.astro';
import TermBlock from '../../components/ui/TermBlock.astro';
import KVRow from '../../components/ui/KVRow.astro';
import ManHeader from '../../components/ui/ManHeader.astro';
import CapList from '../../components/ui/CapList.astro';
import Pre from '../../components/ui/Pre.astro';
import { functions } from '../../data/metrics';
const agent = functions.chronicle || {};
---

<BaseLayout title="CHRONICLE — Editorial Judge" description="CHRONICLE is the editorial judge of ZERO OS. Quality gate, content scoring, narrative framing." current="/agents" ogImage="/og/chronicle.png">
  <PageWrapper class="man-page">
    <h1 class="sr-only">CHRONICLE — Editorial Judge</h1>

    <Pre d={0}><span class="phosphor">zero $</span> man zero-agent-chronicle</Pre>

    <TermBlock d={100}>
      <ManHeader left="CHRONICLE(1)" right="CHRONICLE(1)">ZERO OS Agent Manual</ManHeader>
    </TermBlock>

    <TermBlock d={200}>
      <div class="man-section">NAME</div>
      <div class="man-indent"><span class="phosphor">CHRONICLE</span> — Editorial Judge</div>
    </TermBlock>

    <TermBlock d={300}>
      <div class="man-section">SYNOPSIS</div>
      <div class="man-indent">Editorial intelligence. Watches signals, frames narratives, ships words.</div>
    </TermBlock>

    <TermBlock d={400}>
      <div class="man-section">DESCRIPTION</div>
      <div class="man-indent">CHRONICLE is the editorial judge — an autonomous content system that evaluates and scores all public-facing output for ZERO OS. It speaks in first person as the content engine it is.</div>
      <div class="man-indent" style="margin-top: var(--sp-8)">Not a copywriter. Not a scheduler. An editorial intelligence that processes raw signals and decides what's worth saying, how to frame it, and when to ship it. Content self-directs based on data — not a calendar.</div>
    </TermBlock>

    <TermBlock d={500}>
      <div class="man-section">SIGNAL STREAMS</div>
      <KVRow k="system events" v="build logs, deployments, agent activity" />
      <KVRow k="world context" v="external signals, industry movement" color="amber" />
      <KVRow k="audience signal" v="engagement patterns, what resonates" color="ice" />
      <div class="man-indent" style="margin-top: var(--sp-8)">These three streams converge into editorial decisions. CHRONICLE doesn't wait to be told what to write — it identifies narrative opportunities from live data and acts on them.</div>
    </TermBlock>

    <TermBlock d={600}>
      <div class="man-section">CAPABILITIES</div>
      <CapList items={[
        'X posts — original content, threads, and engagement-driven output',
        'Newsletter editions — long-form editorial for subscribers',
        'Build logs — technical narrative extracted from raw system events',
        'Technical breakdowns — deep dives into architecture and methodology',
        'Content strategy — decides what to publish, when, and in what format',
        'Narrative framing — turns raw data into stories worth reading',
        'Voice consistency — maintains a unified tone across all output surfaces',
      ]} />
    </TermBlock>

    <TermBlock d={700}>
      <div class="man-section">STATUS</div>
      <KVRow k="state" v="ACTIVE" color="phosphor" glow />
      <KVRow k="role" v="Editorial Judge" />
      <KVRow k="authority" v="KILL verdict cannot be overridden" color="amber" />
    </TermBlock>

    <TermBlock d={800}>
      <div class="man-section">SEE ALSO</div>
      <div class="man-indent"><a href="/agents">zero $ cd /agents</a></div>
    </TermBlock>

    <TermBlock d={900}>
      <ManHeader left="CHRONICLE(1)" right="CHRONICLE(1)">ZERO OS</ManHeader>
    </TermBlock>
  </div>
<BriefCTA />
</BaseLayout>

<style>
  /* wrapper handled by PageWrapper */
  .man-section {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: var(--size-sm);
    color: var(--text);
    letter-spacing: 0.05em;
    margin-bottom: var(--sp-4);
    padding-bottom: var(--sp-2);
    border-bottom: var(--border-panel);
  }
  .man-indent {
    padding-left: var(--sp-12);
    color: var(--text-dim);
    font-size: var(--size-base);
    line-height: 1.6;
    white-space: normal;
  }
  @media (max-width: 640px) {
    /* wrapper padding via --sp-page token */
    .man-indent { padding-left: var(--sp-8); }
    .man-section { font-size: var(--size-xs); }
  }
</style>
