---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
import BriefCTA from '../../components/BriefCTA.astro';
import TermBlock from '../../components/ui/TermBlock.astro';
import KVRow from '../../components/ui/KVRow.astro';
import ManHeader from '../../components/ui/ManHeader.astro';
import CapList from '../../components/ui/CapList.astro';
import Pre from '../../components/ui/Pre.astro';
import { functions } from '../../data/metrics';
const agent = functions.aesthete || {};
---

<BaseLayout title="AESTHETE — Visual Cortex" description="AESTHETE produces all visual assets for ZERO OS. PHOSPHOR design system guardian. Autonomous visual authority." current="/agents">
  <div class="man-page">
    <h1 class="sr-only">AESTHETE — Visual Cortex</h1>

    <Pre d={0}><span class="phosphor">zero $</span> man zero-agent-aesthete</Pre>

    <TermBlock d={100}>
      <ManHeader left="AESTHETE(1)" right="AESTHETE(1)">ZERO OS Agent Manual</ManHeader>
    </TermBlock>

    <TermBlock d={200}>
      <div class="man-section">NAME</div>
      <div class="man-indent"><span class="phosphor">AESTHETE</span> — Visual Cortex</div>
    </TermBlock>

    <TermBlock d={300}>
      <div class="man-section">SYNOPSIS</div>
      <div class="man-indent">Autonomous visual authority. Guardian of the PHOSPHOR design system.</div>
    </TermBlock>

    <TermBlock d={400}>
      <div class="man-section">DESCRIPTION</div>
      <div class="man-indent">AESTHETE is the visual cortex — an autonomous visual authority responsible for every pixel ZERO OS produces. It created and maintains the PHOSPHOR design system that governs all visual output.</div>
      <div class="man-indent" style="margin-top: var(--sp-8)">Not a designer on call. An autonomous system with its own visual intelligence. It decides what looks right, enforces consistency, and rejects anything that doesn't meet the standard.</div>
    </TermBlock>

    <TermBlock d={500}>
      <div class="man-section">PHOSPHOR DESIGN SYSTEM</div>
      <CapList bullet="▸" items={[
        'Phosphor green (#c8ff00) is semantic — earned by active/positive states, never decorative',
        'No rounded corners, no gradients, no shadows — hard edges, raw structure',
        'Every asset must pass the 150px thumbnail readability test',
        'Color is always functional — it communicates state, not mood',
        'Typography-first hierarchy — information architecture through type scale',
      ]} />
    </TermBlock>

    <TermBlock d={600}>
      <div class="man-section">CAPABILITIES</div>
      <CapList items={[
        'Social media visuals — thumbnails, header images, post graphics',
        'Product covers and marketing assets',
        'Website design and layout decisions',
        'Dashboard layouts and data visualizations',
        'Image generation via FLUX2 — no stock imagery, ever',
        'Design reviews — flags regressions and enforces visual coherence',
        'Brand consistency across all output surfaces',
      ]} />
    </TermBlock>

    <TermBlock d={700}>
      <div class="man-section">STATUS</div>
      <KVRow k="state" v="ACTIVE" color="phosphor" glow />
      <KVRow k="role" v="Visual Cortex" />
      <KVRow k="design system" v="PHOSPHOR Canon" color="phosphor" />
    </TermBlock>

    <TermBlock d={800}>
      <div class="man-section">SEE ALSO</div>
      <div class="man-indent"><a href="/agents">zero $ cd /agents</a></div>
    </TermBlock>

    <TermBlock d={900}>
      <ManHeader left="AESTHETE(1)" right="AESTHETE(1)">ZERO OS</ManHeader>
    </TermBlock>
  </div>
<BriefCTA />
</BaseLayout>

<style>
  .man-page {
    max-width: 820px;
    padding: 0 var(--sp-16);
  }
  .man-section {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: var(--size-sm);
    color: var(--text);
    letter-spacing: 0.05em;
    margin-bottom: var(--sp-4);
    padding-bottom: var(--sp-2);
    border-bottom: var(--border-panel);
  }
  .man-indent {
    padding-left: var(--sp-12);
    color: var(--text-dim);
    font-size: var(--size-base);
    line-height: 1.6;
    white-space: normal;
  }
  @media (max-width: 640px) {
    .man-page { padding: 0 var(--sp-10); }
    .man-indent { padding-left: var(--sp-8); }
    .man-section { font-size: var(--size-xs); }
  }
</style>
