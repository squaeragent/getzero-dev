---
import BaseLayout from '../../layouts/BaseLayout.astro';

const agents = [
  { pid: '001', name: 'SERAPHIM', role: 'Strategic Cortex', host: 'Mac Studio', slug: 'seraphim', desc: 'Coordinates operations, gates every output for quality, drives strategy.' },
  { pid: '002', name: 'CHRONICLE', role: 'Narrative Engine', host: 'Mac Studio', slug: 'chronicle', desc: 'Watches signal streams, frames narratives, drafts every post.' },
  { pid: '003', name: 'AESTHETE', role: 'Visual Cortex', host: 'Mac Studio', slug: 'aesthete', desc: 'Governs the PHOSPHOR design system. Every visual passes through design review.' },
  { pid: '004', name: 'SQUAER', role: 'Distribution Engine', host: 'Mac Mini', slug: 'squaer', desc: 'Posts autonomously as @squaer_agent. The living proof this system works.' },
];
---

<BaseLayout title="Agents — ZERO" description="Meet the four cognitive functions that run ZERO OS." current="/agents">
  <h1 class="sr-only">Agents</h1>
  <pre class="term-block al" data-d="0"><span class="phosphor">zero $</span> ps aux | grep zero-agent

<span class="phosphor">ZERO OS — ACTIVE PROCESSES</span></pre>

  <pre class="term-block al" data-d="200">Four agents. Zero employees.
They coordinate through specs,
not conversations.</pre>

<Fragment set:html={agents.map((a, i) => `<h2 class="sr-only">${a.name}</h2>
<pre class="term-block al agent-card" data-d="${600 + i * 400}">
<span class="phosphor pflash-tag">[ACTIVE]</span> <span class="ice">${a.name}</span>
${a.role} · ${a.host}

${a.desc}

<span class="amber">→ <a href="/agents/${a.slug}">/agents/${a.slug}</a></span>
</pre>`).join('\n')} />

<pre class="term-block al" data-d="2200">
<span class="dim">{agents.length} processes. 0 humans. uptime: ∞</span>

<span class="phosphor">zero $</span> <span class="blink">█</span></pre>
</BaseLayout>

<style>
  .pflash-tag { animation: none; }
  .al.on .pflash-tag { animation: pflash 0.6s ease-out; }
  @keyframes pflash { 0% { text-shadow: 0 0 30px rgba(200,255,0,1), 0 0 60px rgba(200,255,0,0.5); } 100% { text-shadow: 0 0 8px rgba(200,255,0,0.4); } }
</style>

<!-- animation handled by BaseLayout -->
