---
/**
 * MetricValue â€” big number + label.
 * Usage: <MetricValue value="99.7%" label="UPTIME" />
 * Renders a large highlighted value with a small label below.
 */
interface Props {
  value: string;
  label: string;
  color?: 'phosphor' | 'amber' | 'ice';
  sub?: string;
  class?: string;
}
const { value, label, color = 'phosphor', sub, class: className } = Astro.props;
---

<div class:list={["mv", className]}>
  <div class="mv-label">{label}</div>
  <div class:list={["mv-value", color]}>{value}</div>
  {sub && <div class="mv-sub">{sub}</div>}
</div>

<style>
  .mv {
    padding: 16px 12px;
  }
  .mv-label {
    font-family: var(--font-head);
    font-size: 0.625rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--text-dim);
    margin-bottom: 6px;
  }
  .mv-value {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    line-height: 1;
    margin-bottom: 4px;
  }
  .mv-value.phosphor {
    color: var(--phosphor);
    text-shadow: 0 0 8px var(--phosphor-glow);
  }
  .mv-value.amber {
    color: var(--amber);
    text-shadow: 0 0 8px var(--amber-glow);
  }
  .mv-value.ice {
    color: var(--ice);
    text-shadow: 0 0 8px var(--ice-glow);
  }
  .mv-sub {
    font-size: 0.625rem;
    color: var(--text-dim);
    opacity: 0.6;
  }
  @media (max-width: 640px) {
    .mv { padding: 12px 10px; }
    .mv-value { font-size: 1.3rem; }
  }
</style>
