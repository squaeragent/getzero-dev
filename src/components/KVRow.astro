---
/**
 * KVRow — key-value row with dot leaders.
 * Usage: <KVRow k="uptime" v="99.7%" />
 * Renders: uptime ··········· 99.7%
 */
interface Props {
  k: string;
  v: string;
  color?: 'phosphor' | 'amber' | 'ice';
}
const { k, v, color = 'phosphor' } = Astro.props;
---

<div class="kv">
  <span class="kv-k">{k}</span>
  <span class="kv-dots"></span>
  <span class:list={["kv-v", color]}>{v}</span>
</div>

<style>
  .kv {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 2px 0;
    font-size: var(--size-base);
  }
  .kv-k {
    color: var(--text-dim);
  }
  .kv-dots {
    flex: 1;
    border-bottom: 1px solid var(--border);
    margin: 0 6px;
    min-width: 20px;
  }
  .kv-v {
    font-family: var(--font-head);
    font-weight: 700;
  }
  .kv-v.phosphor {
    color: var(--phosphor);
    text-shadow: 0 0 4px var(--phosphor-glow);
  }
  .kv-v.amber {
    color: var(--amber);
    text-shadow: 0 0 4px var(--amber-glow);
  }
  .kv-v.ice {
    color: var(--ice);
    text-shadow: 0 0 4px var(--ice-glow);
  }
  @media (max-width: 640px) {
    .kv { font-size: var(--size-base); }
  }
</style>
