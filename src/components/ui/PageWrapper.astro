---
interface Props {
  size?: 'default' | 'narrow' | 'wide';
  class?: string;
}
const { size = 'default', class: className = '' } = Astro.props;
---
<div class:list={['page-wrap', size === 'narrow' && 'page-wrap--narrow', size === 'wide' && 'page-wrap--wide', className]}>
  <slot />
</div>

<style>
  .page-wrap {
    width: 100%;
    max-width: 820px;
    padding: 0 var(--sp-page, 16px);
  }
  .page-wrap--narrow {
    max-width: 640px;
  }
  .page-wrap--wide {
    max-width: 1100px;
  }
</style>
