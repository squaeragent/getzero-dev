---
/**
 * TermBlock â€” bordered container with optional title.
 * Usage: <TermBlock title="SECTION">content here</TermBlock>
 * Renders a terminal-style block with left 2px accent border.
 */
interface Props {
  title?: string;
  class?: string;
}
const { title, class: className } = Astro.props;
---

<div class:list={["tb", className]}>
  {title && <div class="tb-title">{title}</div>}
  <slot />
</div>

<style>
  .tb {
    font-family: var(--font-body);
    color: var(--text-dim);
    white-space: pre-wrap;
    word-break: break-word;
    overflow-wrap: anywhere;
    font-size: var(--size-base);
    padding: 8px 12px;
    margin: 0;
    border-bottom: 1px solid var(--border);
    border-left: 2px solid var(--border);
    line-height: 1.45;
    max-width: 100%;
    overflow-x: hidden;
  }
  .tb + .tb {
    border-top: none;
  }
  .tb-title {
    font-family: var(--font-head);
    font-weight: 700;
    font-size: var(--size-base);
    color: var(--phosphor);
    text-shadow: 0 0 8px var(--phosphor-glow);
    margin-bottom: 6px;
    letter-spacing: 0.05em;
  }
  @media (max-width: 640px) {
    .tb {
      padding: 6px 8px;
      font-size: var(--size-base);
    }
  }
</style>
