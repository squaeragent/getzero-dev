---
/**
 * CapList — capability bullet list.
 * Usage: <CapList items={["item 1", "item 2"]} />
 * Renders terminal-style bullet list with phosphor markers.
 */
interface Props {
  items: string[];
  marker?: string;
  class?: string;
}
const { items, marker = '▸', class: className } = Astro.props;
---

<ul class:list={["cl", className]}>
  {items.map(item => (
    <li><span class="cl-m">{marker}</span> {item}</li>
  ))}
</ul>

<style>
  .cl {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: var(--size-base);
    color: var(--text-dim);
  }
  .cl li {
    padding: 2px 0;
    line-height: 1.5;
  }
  .cl-m {
    color: var(--phosphor);
    text-shadow: 0 0 4px var(--phosphor-glow);
    margin-right: 4px;
  }
</style>
