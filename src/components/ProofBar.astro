---
// Live Proof Bar — reads from site-data.json at build time
// Falls back to static values if data unavailable

let data: any = null;
try {
  const fs = await import('node:fs');
  const path = await import('node:path');
  const filePath = path.default.join(process.cwd(), 'public/data/site-data.json');
  const raw = fs.default.readFileSync(filePath, 'utf-8');
  data = JSON.parse(raw);
} catch {
  // fallback
}

const status = data?.system_status || 'active';
const lastActivity = data?.last_activity ? new Date(data.last_activity) : null;
const dayNumber = data?.day_number || 9;
const treasury = data?.treasury_usd || 30300;
const agents = data?.agents || 4;
const specs = data?.specs || 62;

// Calculate "X min ago"
let agoText = '—';
if (lastActivity) {
  const now = new Date();
  const diffMs = now.getTime() - lastActivity.getTime();
  const diffMin = Math.floor(diffMs / 60000);
  if (diffMin < 60) agoText = `${diffMin}m ago`;
  else if (diffMin < 1440) agoText = `${Math.floor(diffMin / 60)}h ago`;
  else agoText = `${Math.floor(diffMin / 1440)}d ago`;
}

// Format treasury
const treasuryStr = treasury >= 1000 ? `$${(treasury / 1000).toFixed(1)}K` : `$${treasury}`;
---

<div class="live-proof-bar">
  <div class="live-proof-inner">
    <span class="live-proof-item">
      <span class="live-dot"></span>
      System {status}
    </span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">Last action: {agoText}</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">Day {dayNumber}</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">{treasuryStr} treasury</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">{agents} agents · {specs} specs</span>
  </div>
</div>

<style>
  .live-proof-bar {
    position: fixed;
    top: 57px; /* below nav */
    left: 0;
    right: 0;
    z-index: 99;
    background: var(--surface);
    border-bottom: 1px solid var(--border);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.04em;
    color: var(--fg-dim);
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }
  .live-proof-inner {
    max-width: 1080px;
    margin: 0 auto;
    padding: 8px clamp(24px, 5vw, 80px);
    display: flex;
    align-items: center;
    gap: 0;
    white-space: nowrap;
  }
  .live-proof-item {
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }
  .live-proof-sep {
    margin: 0 10px;
    color: var(--border);
  }
  .live-dot {
    width: 6px;
    height: 6px;
    background: var(--accent);
    display: inline-block;
    animation: pulse-dot 2s ease-in-out infinite;
  }
  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  @media (max-width: 768px) {
    .live-proof-bar {
      top: 53px;
    }
    .live-proof-inner {
      font-size: 0.6875rem;
      padding: 7px 20px;
      flex-wrap: wrap;
      white-space: normal;
      line-height: 1.7;
    }
  }
</style>
