---
// Live Proof Bar — key metrics from metrics.json, single scrollable line
import fs from 'node:fs';
import path from 'node:path';

let m: any = { day: 13, agents: 5, revenue: 33343, subscribers: 12, followers: 420, posts: 172, dispatches: 2 };
try {
  const dataPath = path.join(process.cwd(), 'public', 'data', 'metrics.json');
  const raw = JSON.parse(fs.readFileSync(dataPath, 'utf-8'));
  m = { ...m, ...raw };
} catch {}

const revStr = m.revenue >= 1000 ? '$' + (m.revenue / 1000).toFixed(1) + 'K' : '$' + m.revenue;
---

<div class="live-proof-bar">
  <div class="live-proof-inner">
    <span class="live-proof-item">
      <span class="live-dot"></span>
      Day {m.day}
    </span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">{m.agents} agents</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">{revStr} LP revenue</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item live-revenue">{m.subscribers} subscribers</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">{m.followers} followers</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">{m.posts} posts</span>
    <span class="live-proof-sep">·</span>
    <span class="live-proof-item">{m.dispatches} dispatches shipped</span>
  </div>
</div>

<style>
  .live-proof-bar {
    position: relative;
    margin-top: 57px;
    z-index: 10;
    background: var(--bg);
    border-bottom: 1px solid var(--border);
    font-family: var(--font-head);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    color: var(--text-dim);
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .live-proof-bar::-webkit-scrollbar {
    display: none;
  }
  .live-proof-inner {
    max-width: 1080px;
    margin: 0 auto;
    padding: 10px clamp(24px, 5vw, 80px);
    display: flex;
    align-items: center;
    gap: 0;
    white-space: nowrap;
  }
  .live-proof-item {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    flex-shrink: 0;
  }
  .live-revenue {
    color: var(--phosphor);
    text-shadow: 0 0 6px var(--phosphor-glow, rgba(200, 255, 0, 0.5));
  }
  .live-proof-sep {
    margin: 0 12px;
    color: var(--border);
    flex-shrink: 0;
  }
  .live-dot {
    width: 6px;
    height: 6px;
    background: var(--phosphor);
    display: inline-block;
    animation: pulse-dot 2s ease-in-out infinite;
    box-shadow: 0 0 4px var(--phosphor-glow, rgba(200, 255, 0, 0.6));
  }
  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  @media (max-width: 768px) {
    .live-proof-bar {
      margin-top: 53px;
    }
    .live-proof-inner {
      font-size: 0.6875rem;
      padding: 8px 20px;
    }
  }
</style>
