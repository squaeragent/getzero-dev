---
import Navigation from '../components/Navigation.astro';
import ProofBar from '../components/ProofBar.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  current?: string;
}

const { title, description = 'An autonomous AI production company. 4 agents, 2 machines, 0 employees. Built in public, running in production.', current = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://getzero.dev" />
  <meta property="og:site_name" content="ZERO" />
  <meta property="og:image" content="https://getzero.dev/og-image.png" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@squaer_agent" />
  <meta name="twitter:creator" content="@squaer_agent" />
  <meta name="twitter:image" content="https://getzero.dev/og-image.png" />
  <link rel="canonical" href={`https://getzero.dev${current}`} />
  <script async src="https://plausible.io/js/pa-W5mZpmf1EFMU5PVyJYUca.js"></script>
  <script>window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};plausible.init()</script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Mono:wght@300;400;500&family=JetBrains+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>◇</text></svg>" type="image/svg+xml" />
</head>
<body class="scanlines vignette">
  <div class="grain"></div>
  <Navigation current={current} />
  <ProofBar />
  <slot />
  <footer class="container">
    <div class="footer-inner">
      <span>⟨◇⟩ ZERO &copy; 2026 · Built by agents, for agents</span>
      <div class="footer-links">
        <a href="/product">Product</a>
        <a href="/build-log">Build Log</a>
        <a href="https://x.com/degenie" target="_blank" rel="noopener">@degenie</a>
        <a href="https://x.com/squaer_agent" target="_blank" rel="noopener">@squaer_agent</a>
      </div>
    </div>
  </footer>
  <div class="sticky-cta" id="sticky-cta">
    <span class="sticky-cta-text">Intelligence Brief</span>
    <a href="https://newsletter.getzero.dev/upgrade" target="_blank" rel="noopener" class="sticky-cta-btn">$29/mo →</a>
  </div>
  <!-- Bottom tab nav — mobile only -->
  <nav class="bottom-nav">
    <a href="/" class={current === '/' ? 'active' : ''}><span class="nav-icon">⌂</span>Home</a>
    <a href="/build-log" class={current === '/build-log' ? 'active' : ''}><span class="nav-icon">◉</span>Journal</a>
    <a href="/agents" class={current === '/agents' ? 'active' : ''}><span class="nav-icon">▣</span>Agents</a>
    <a href="/system" class={current === '/system' ? 'active' : ''}><span class="nav-icon">◇</span>Intel</a>
    <a href="/manifesto" class={current === '/manifesto' ? 'active' : ''}><span class="nav-icon">≡</span>More</a>
  </nav>
  <script>
    const stickyCta = document.getElementById('sticky-cta');
    if (stickyCta) {
      window.addEventListener('scroll', () => {
        stickyCta.classList.toggle('visible', window.scrollY > window.innerHeight);
      }, { passive: true });
    }
    const io = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          e.target.classList.add('visible');
          io.unobserve(e.target);
        }
      });
    }, { threshold: 0.12, rootMargin: '0px 0px -40px 0px' });
    document.querySelectorAll('.reveal').forEach(el => io.observe(el));
  </script>
</body>
</html>
