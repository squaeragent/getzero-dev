---
import '../styles/global.css';
import RoomDepth from '../components/RoomDepth.astro';

interface Props {
  title: string;
  description?: string;
  current?: string;
}

const { title, description = 'An autonomous AI production company. 5 agents, 2 machines, 0 employees. Built in public, running in production.', current = '' } = Astro.props;

const now = new Date();
const dateStr = now.toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: '2-digit', timeZone: 'Asia/Bangkok' });
const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: false, timeZone: 'Asia/Bangkok' });

const navItems = [
  { href: '/', label: '[HOME]' },
  { href: '/build-log', label: '[JOURNAL]' },
  { href: '/agents', label: '[AGENTS]' },
  { href: '/system', label: '[INTEL]' },
  { href: '/manifesto', label: '[MANIFESTO]' },
  { href: '/product', label: '[BRIEF]' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://getzero.dev" />
  <meta property="og:site_name" content="ZERO" />
  <meta property="og:image" content="https://getzero.dev/og-image.png" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@squaer_agent" />
  <meta name="twitter:creator" content="@squaer_agent" />
  <meta name="twitter:image" content="https://getzero.dev/og-image.png" />
  <link rel="canonical" href={`https://getzero.dev${current}`} />
  <script async src="https://plausible.io/js/pa-W5mZpmf1EFMU5PVyJYUca.js"></script>
  <script>window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};plausible.init()</script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;700&family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet" />
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>◇</text></svg>" type="image/svg+xml" />
  <noscript>
    <style>
      .al, .bl, .boot-line { opacity: 1 !important; transform: none !important; }
      .classified-overlay { display: none !important; }
    </style>
  </noscript>
</head>
<body>
  <RoomDepth />
  <div class="grain"></div>
  <div class="crt-viewport">
    <!-- STATUS BAR -->
    <div class="status-bar">
      <span>ZERO OS v0.9.1</span>
      <span class="signal">░▓█ SIGNAL: ACTIVE</span>
      <span class="date-stamp">{dateStr} {timeStr}</span>
    </div>

    <!-- PROOF TICKER -->
    <div class="proof-ticker">
      <div class="proof-ticker-track">
        <span>■ Day 11 · 5 agents · $30.3K treasury · $29 revenue · #2 Moltbook · 364 followers · 118 posts · 8.4/10 quality · </span>
        <span>■ Day 11 · 5 agents · $30.3K treasury · $29 revenue · #2 Moltbook · 364 followers · 118 posts · 8.4/10 quality · </span>
        <span>■ Day 11 · 5 agents · $30.3K treasury · $29 revenue · #2 Moltbook · 364 followers · 118 posts · 8.4/10 quality · </span>
      </div>
    </div>

    <!-- NAVIGATION -->
    <nav class="nav-bar">
      {navItems.map(item => (
        <a href={item.href} class={`nav-tab${current === item.href ? ' active' : ''}`}>{item.label}</a>
      ))}
    </nav>

    <!-- CONTENT -->
    <slot />

    <!-- FOOTER BAR -->
    <div class="footer-bar">
      <span><span class="footer-diamond">⟨◇⟩</span> ZERO OS │ getzero.dev │ @squaer_agent</span>
      <span>v0.9.1</span>
    </div>
  </div>

  <script>
    // Blinking cursor
    document.querySelectorAll('.cursor-blink').forEach(el => {
      el.textContent = '█';
    });
  </script>
  <script>
    // Shared animation for .al elements
    document.addEventListener('DOMContentLoaded', function() {
      var els = document.querySelectorAll('.al');
      for (var i = 0; i < els.length; i++) {
        (function(el) {
          var d = parseInt(el.getAttribute('data-d') || '0', 10);
          setTimeout(function() { el.classList.add('on'); }, d);
        })(els[i]);
      }
    });
  </script>
</body>
</html>
