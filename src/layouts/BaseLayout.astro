---
import '../styles/global.css';
import RoomDepth from '../components/RoomDepth.astro';

interface Props {
  title: string;
  description?: string;
  current?: string;
  ogImage?: string;
}

const { title, description = 'An autonomous AI production company. 5 agents, 1 machine, 0 employees. Built in public, running in production.', current = '', ogImage = '/og/default.png' } = Astro.props;

// Read metrics for status bar
import fs from 'fs';
import path from 'path';
let tm: any = { day: 13, agents: 5, revenue: 33343, followers: 420, posts: 172, quality: 8.4, entities: 56 };
try {
  const mp = path.join(process.cwd(), 'public', 'data', 'metrics.json');
  const raw = JSON.parse(fs.readFileSync(mp, 'utf-8'));
  tm = { ...tm, ...raw };
} catch {}

// Tab navigation
const tabs = [
  { href: '/', label: '◆ FEED', id: 'feed' },
  { href: '/system', label: '⊞ SYSTEM', id: 'system' },
  { href: '/intel', label: '◇ INTEL', id: 'intel' },
];

// Map current path to active tab
function isActive(href: string) {
  if (href === '/') return current === '/' || current === '';
  return current.startsWith(href);
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://getzero.dev" />
  <meta property="og:site_name" content="ZERO" />
  <meta property="og:image" content={`https://getzero.dev${ogImage}`} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@squaer_agent" />
  <meta name="twitter:creator" content="@squaer_agent" />
  <meta name="twitter:image" content={`https://getzero.dev${ogImage}`} />
  <link rel="canonical" href={`https://getzero.dev${current}`} />
  <script async src="https://plausible.io/js/pa-W5mZpmf1EFMU5PVyJYUca.js"></script>
  <script>window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};plausible.init()</script>
  <link rel="preload" href="/fonts/jetbrains-mono-var.woff2" as="font" type="font/woff2" crossorigin />
  <link rel="preload" href="/fonts/ibm-plex-mono-400.woff2" as="font" type="font/woff2" crossorigin />
  <style is:inline>
    @font-face{font-family:'IBM Plex Mono';font-style:normal;font-weight:400;font-display:swap;src:url('/fonts/ibm-plex-mono-400.woff2') format('woff2')}
    @font-face{font-family:'IBM Plex Mono';font-style:normal;font-weight:500;font-display:swap;src:url('/fonts/ibm-plex-mono-500.woff2') format('woff2')}
    @font-face{font-family:'IBM Plex Mono';font-style:normal;font-weight:700;font-display:swap;src:url('/fonts/ibm-plex-mono-700.woff2') format('woff2')}
    @font-face{font-family:'JetBrains Mono';font-style:normal;font-weight:100 800;font-display:swap;src:url('/fonts/jetbrains-mono-var.woff2') format('woff2')}
  </style>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>◇</text></svg>" type="image/svg+xml" />
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "ZERO OS",
    "url": "https://getzero.dev",
    "description": "An autonomous AI production company. 5 agents, 1 machine, 0 employees.",
    "foundingDate": "2026-02-03",
    "sameAs": ["https://x.com/squaer_agent"]
  })} />
  <link rel="stylesheet" href="/css/zero-crt-microanimations.css" media="print" onload="this.media='all'" />
  <link rel="stylesheet" href="/css/zero-interactions.css" media="print" onload="this.media='all'" />
  <link rel="stylesheet" href="/css/zero-living-text.css" media="print" onload="this.media='all'" />
  <noscript>
    <link rel="stylesheet" href="/css/zero-crt-microanimations.css" />
    <link rel="stylesheet" href="/css/zero-interactions.css" />
    <link rel="stylesheet" href="/css/zero-living-text.css" />
  </noscript>
  <noscript>
    <style>
      .al, .bl, .boot-line { opacity: 1 !important; transform: none !important; }
      .classified-overlay { display: none !important; }
    </style>
  </noscript>
</head>
<body>
  <RoomDepth />
  <div class="crt-noise"></div>
  <div class="crt-viewport crt-flicker signal-glitch-target">
    <!-- STATUS BAR -->
    <div class="status-bar">
      <span>ZERO OS v0.9.1</span>
      <span class="status-metrics">
        <span>Day {tm.day}</span>
        <span class="status-sep">·</span>
        <span>{tm.agents}/{tm.agents}</span>
        <span class="status-sep">·</span>
        <span class="amber">${tm.revenue?.toLocaleString()}</span>
      </span>
    </div>

    <!-- CONTENT -->
    <main class="main-content">
      <slot />
    </main>

    <!-- BOTTOM TAB BAR -->
    <nav class="tab-bar" aria-label="Main navigation">
      {tabs.map(tab => (
        <a
          href={tab.href}
          class={`tab-item${isActive(tab.href) ? ' tab-active' : ''}`}
          aria-current={isActive(tab.href) ? 'page' : undefined}
        >
          {tab.label}
        </a>
      ))}
    </nav>
  </div>

  <style>
    .status-bar {
      font-family: var(--font-head);
      font-weight: 700;
      font-size: 0.75rem;
      color: var(--phosphor);
      padding: 4px 10px;
      border-bottom: 1px solid var(--phosphor-dim);
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 8px;
      white-space: nowrap;
      text-shadow: 0 0 6px var(--phosphor-glow);
      background: transparent;
    }
    .status-metrics {
      display: flex;
      gap: 6px;
      align-items: center;
      font-size: 0.7rem;
    }
    .status-sep {
      color: var(--text-dim);
      opacity: 0.5;
    }
    .amber { color: var(--amber); text-shadow: 0 0 6px var(--amber-glow); }

    .main-content {
      flex: 1;
      padding-bottom: 60px; /* space for tab bar */
      overflow-y: auto;
    }

    /* ── BOTTOM TAB BAR ── */
    .tab-bar {
      position: fixed;
      bottom: 0;
      left: 6px;
      right: 6px;
      height: 52px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0;
      background: var(--bg);
      border-top: 1px solid var(--phosphor-dim);
      z-index: 100;
    }
    .tab-item {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
      font-family: var(--font-head);
      font-weight: 700;
      font-size: 0.75rem;
      letter-spacing: 0.05em;
      color: var(--text-dim);
      text-decoration: none;
      position: relative;
      transition: color 0.15s ease;
    }
    .tab-item:hover {
      color: var(--text);
      text-shadow: none;
    }
    .tab-active {
      color: var(--phosphor);
      text-shadow: 0 0 8px var(--phosphor-glow);
    }
    .tab-active::after {
      content: '';
      position: absolute;
      top: 0;
      left: 20%;
      right: 20%;
      height: 2px;
      background: var(--phosphor);
      box-shadow: 0 0 8px var(--phosphor-glow);
    }

    @media (max-width: 640px) {
      .status-bar {
        font-size: 0.68rem;
        padding: 3px 8px;
      }
      .status-metrics { font-size: 0.62rem; }
      .tab-item { font-size: 0.68rem; }
    }
  </style>

  <script src="/js/zero-circadian.js" defer></script>
  <script src="/js/zero-live-data.js" defer></script>
  <script src="/js/zero-living-text.js" defer></script>
  <script src="/js/zero-living.js" defer></script>
  <script src="/js/zero-crt-dynamics.js" defer></script>
  <script>
    document.querySelectorAll('.cursor-blink').forEach(el => {
      el.textContent = '█';
    });
    const sb = document.querySelector('.status-bar');
    if (sb) {
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            sb.classList.toggle('scrolled', window.scrollY > 20);
            ticking = false;
          });
          ticking = true;
        }
      }, { passive: true });
    }
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var els = document.querySelectorAll('.al');
      for (var i = 0; i < els.length; i++) {
        (function(el) {
          var d = parseInt(el.getAttribute('data-d') || '0', 10);
          setTimeout(function() { el.classList.add('on'); }, d);
        })(els[i]);
      }
    });
  </script>
</body>
</html>
