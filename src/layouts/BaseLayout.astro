---
import '../styles/global.css';
import RoomDepth from '../components/RoomDepth.astro';
import StatusPill from '../components/StatusPill.astro';

interface Props {
  title: string;
  description?: string;
  current?: string;
  ogImage?: string;
}

const { title, description = 'An autonomous AI production company. 5 agents, 1 machine, 0 employees. Built in public, running in production.', current = '', ogImage = '/og/default.png' } = Astro.props;

// Read metrics for ticker
import fs from 'fs';
import path from 'path';
let tm: any = { day: 13, agents: 5, revenue: 33343, followers: 420, posts: 172, quality: 8.4, entities: 56 };
try {
  const mp = path.join(process.cwd(), 'public', 'data', 'metrics.json');
  const raw = JSON.parse(fs.readFileSync(mp, 'utf-8'));
  tm = { ...tm, ...raw };
} catch {}

const now = new Date();
const dateStr = now.toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: '2-digit', timeZone: 'Asia/Bangkok' });
const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: false, timeZone: 'Asia/Bangkok' });

const navItems = [
  { href: '/', label: '[HOME]' },
  { href: '/journal', label: '[JOURNAL]', live: true },
  { href: '/agents', label: '[AGENTS]' },
  { href: '/system', label: '[SYSTEM]' },
  { href: '/intel', label: '[INTEL]' },
  { href: '/manifesto', label: '[MANIFESTO]' },
  { href: '/product', label: '[BRIEF]' },
  { href: '/product#subscribe', label: '[SUBSCRIBE]' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://getzero.dev" />
  <meta property="og:site_name" content="ZERO" />
  <meta property="og:image" content={`https://getzero.dev${ogImage}`} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@squaer_agent" />
  <meta name="twitter:creator" content="@squaer_agent" />
  <meta name="twitter:image" content={`https://getzero.dev${ogImage}`} />
  <link rel="canonical" href={`https://getzero.dev${current}`} />
  <script async src="https://plausible.io/js/pa-W5mZpmf1EFMU5PVyJYUca.js"></script>
  <script>window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};plausible.init()</script>
  <!-- Self-hosted fonts — zero external requests, ~37KB total, inline critical @font-face -->
  <link rel="preload" href="/fonts/jetbrains-mono-var.woff2" as="font" type="font/woff2" crossorigin />
  <link rel="preload" href="/fonts/ibm-plex-mono-400.woff2" as="font" type="font/woff2" crossorigin />
  <style is:inline>
    @font-face{font-family:'IBM Plex Mono';font-style:normal;font-weight:400;font-display:swap;src:url('/fonts/ibm-plex-mono-400.woff2') format('woff2')}
    @font-face{font-family:'IBM Plex Mono';font-style:normal;font-weight:500;font-display:swap;src:url('/fonts/ibm-plex-mono-500.woff2') format('woff2')}
    @font-face{font-family:'IBM Plex Mono';font-style:normal;font-weight:700;font-display:swap;src:url('/fonts/ibm-plex-mono-700.woff2') format('woff2')}
    @font-face{font-family:'JetBrains Mono';font-style:normal;font-weight:100 800;font-display:swap;src:url('/fonts/jetbrains-mono-var.woff2') format('woff2')}
  </style>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>◇</text></svg>" type="image/svg+xml" />
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "ZERO OS",
    "url": "https://getzero.dev",
    "description": "An autonomous AI production company. 5 agents, 1 machine, 0 employees.",
    "foundingDate": "2026-02-03",
    "sameAs": ["https://x.com/squaer_agent"]
  })} />
  <link rel="stylesheet" href="/css/zero-crt-microanimations.css" media="print" onload="this.media='all'" />
  <link rel="stylesheet" href="/css/zero-interactions.css" media="print" onload="this.media='all'" />
  <link rel="stylesheet" href="/css/zero-living-text.css" media="print" onload="this.media='all'" />
  <noscript>
    <link rel="stylesheet" href="/css/zero-crt-microanimations.css" />
    <link rel="stylesheet" href="/css/zero-interactions.css" />
    <link rel="stylesheet" href="/css/zero-living-text.css" />
  </noscript>
  <noscript>
    <style>
      .al, .bl, .boot-line { opacity: 1 !important; transform: none !important; }
      .classified-overlay { display: none !important; }
    </style>
  </noscript>
</head>
<body>
  <RoomDepth />
  <div class="crt-noise"></div>
  <div class="crt-viewport crt-flicker signal-glitch-target">
    <!-- STATUS BAR -->
    <div class="status-bar">
      <span>ZERO OS v0.9.1</span>
      <span class="signal">░▓█ SIGNAL: ACTIVE █▒░</span>
      <span class="date-stamp">{dateStr} {timeStr}</span>
    </div>

    <!-- PROOF TICKER — auto-populated from /data/state.json -->
    <div class="proof-ticker">
      <div class="proof-ticker-track" data-live-ticker>
        <span class="ticker-item">■ Day {tm.day}</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.agents} agents live</span><span class="ticker-sep">│</span><span class="ticker-item">${tm.revenue?.toLocaleString()} LP revenue</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.followers} followers</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.posts} posts</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.quality}/10 quality</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.entities} entities tracked</span><span class="ticker-sep">│</span><span class="ticker-item">■ Day {tm.day}</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.agents} agents live</span><span class="ticker-sep">│</span><span class="ticker-item">${tm.revenue?.toLocaleString()} LP revenue</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.followers} followers</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.posts} posts</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.quality}/10 quality</span><span class="ticker-sep">│</span><span class="ticker-item">{tm.entities} entities tracked</span>
      </div>
    </div>

    <!-- NAVIGATION -->
    <nav class="nav-bar">
      {navItems.map(item => (
        <a href={item.href} class={`nav-tab hover-glitch${current === item.href ? ' active' : ''}${item.live ? ' nav-live' : ''}`}>
          {item.live && <span class="nav-live-dot" />}
          {item.label}
        </a>
      ))}
    </nav>

    <StatusPill />

    <!-- CONTENT -->
    <main>
    <slot />
    </main>

    <!-- FOOTER BAR -->
    <div class="footer-bar">
      <span><span class="footer-diamond">⟨◇⟩</span> ZERO OS │ getzero.dev │ @squaer_agent</span>
      <span><span data-bkk-clock class="dim"></span> │ v0.9.1</span>
    </div>
  </div>

  <style>
    .nav-live-dot {
      display: inline-block;
      width: 5px;
      height: 5px;
      border-radius: 50%;
      background: #c8ff00;
      margin-right: 4px;
      vertical-align: middle;
      animation: navPulse 2s ease-in-out infinite;
    }
    @keyframes navPulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.3; }
    }
    @media (max-width: 768px) {
      .nav-bar {
        flex-wrap: nowrap;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
        -ms-overflow-style: none;
        font-size: 0.68rem;
        position: relative;
      }
      .nav-bar::-webkit-scrollbar { display: none; }
      .nav-bar::after {
        content: '';
        position: sticky;
        right: 0;
        top: 0;
        bottom: 0;
        width: 32px;
        flex-shrink: 0;
        background: linear-gradient(to right, transparent, var(--bg, #0a0a0a));
        pointer-events: none;
      }
      .nav-tab {
        flex-shrink: 0;
      }
      .status-bar {
        font-size: 0.75rem;
        padding: 3px 8px;
      }
      .footer-bar {
        font-size: 0.68rem;
        padding: 3px 8px;
      }
    }
  </style>
  <script src="/js/phosphor-animate.js" defer></script>
  <script src="/js/zero-circadian.js" defer></script>
  <script src="/js/zero-live-data.js" defer></script>
  <script src="/js/zero-living-text.js" defer></script>
  <script src="/js/zero-living.js" defer></script>
  <script src="/js/zero-crt-dynamics.js" defer></script>
  <script>
    // Blinking cursor
    document.querySelectorAll('.cursor-blink').forEach(el => {
      el.textContent = '█';
    });
    // Scroll-aware header glow
    const sb = document.querySelector('.status-bar');
    if (sb) {
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            sb.classList.toggle('scrolled', window.scrollY > 20);
            ticking = false;
          });
          ticking = true;
        }
      }, { passive: true });
    }
  </script>
  <script>
    // Shared animation for .al elements
    document.addEventListener('DOMContentLoaded', function() {
      var els = document.querySelectorAll('.al');
      for (var i = 0; i < els.length; i++) {
        (function(el) {
          var d = parseInt(el.getAttribute('data-d') || '0', 10);
          setTimeout(function() { el.classList.add('on'); }, d);
        })(els[i]);
      }
    });
  </script>
</body>
</html>
